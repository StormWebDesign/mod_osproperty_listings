<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="5.0" client="site" method="upgrade">
    <name>mod_osproperty_listings</name>
    <version>1.0.9-dev</version>
    <creationDate>2025-09-03</creationDate>
    <author>Storm Web Design</author>
    <authorEmail>info@storm.agency</authorEmail>
    <authorUrl>https://www.stormit.co.uk</authorUrl>
    <license>GPL-2.0-or-later</license>
    <title>OS Property Listings</title>
    <description>Displays OS Property listings in card layout (UIKit)</description>
    <files>
        <filename module="mod_osproperty_listings">mod_osproperty_listings.php</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="count"
                    type="number"
                    default="6"
                    label="Number of properties"
                />
                <field
                    name="categories"
                    type="ospropertycategories"
                    multiple="true"
                    label="Select Categories"
                    description="Choose categories of properties to display"
                />
            </fieldset>
        </fields>
    </config>
</extension>

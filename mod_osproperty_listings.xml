<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="5.0" client="site" method="upgrade">
    <name>mod_osproperty_listings</name>
    <version>1.0.16-dev</version>
    <creationDate>2025-09-03</creationDate>
    <author>Storm Web Design</author>
    <authorEmail>info@storm.agency</authorEmail>
    <authorUrl>https://www.stormit.co.uk</authorUrl>
    <license>GPL-2.0-or-later</license>
    <title>OS Property Listings</title>
    <description>Displays OS Property listings in card layout (UIKit)</description>
    <files>
        <filename module="mod_osproperty_listings">mod_osproperty_listings.php</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
    </files>
      <config>
        <fields name="params">
            <fieldset name="basic">
                <!-- Number of properties -->
                <field
                    name="count"
                    type="number"
                    default="6"
                    label="Number of properties"
                />

                <!-- Column count -->
                <field
                    name="columns"
                    type="list"
                    default="3"
                    label="Columns"
                    description="Select how many columns to display in the grid"
                >
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </field>

                <!-- Category selector using SQL -->
                <field
                    name="categories"
                    type="sql"
                    multiple="true"
                    label="Select Categories"
                    description="Choose categories of properties to display"
                    query="SELECT id AS value, category_name AS text FROM #__osrs_categories WHERE published = 1 ORDER BY category_name ASC"
                />
            </fieldset>
        </fields>
    </config>
</extension>
